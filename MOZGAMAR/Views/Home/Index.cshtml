<div class="olContent f1"><h2 style="color:black">Pesquisar Produto/Categoria</h2></div>
<form method="post">
    <div class="olSearch fr">
        <input type="text" name="search" placeholder="Enter Keyword" class="inputComn form-control" />
        <div class="searchIcon">
            <button type="submit" class="searchBtn">
                <img src="~/Images/searchIcon.png" />
            </button>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Produtos<small> disponivel</small></h2>
        </div>
    </div>
</div>

<div class="row product-container">
    @foreach (var item in Model.LiftOfproducts)
    {
        <div class="col-md-3  col-xs-3 col-sm-3" style="margin-bottom:8px">
            <div class="thumbnail product-item" style="height:45%">
                <img class="img-responsive" title=" clica para ver o produto"
                     style="cursor:pointer;height:160px;width:100%"
                     src="~/ProducIMG/@item.ProductImage" />

                <div class="caption">
                    <h5>@item.Name</h5>
                    <p>Preço: <b> @item.Price MT</b></p>
                    @if (item.IsFeatured == true)
                    {
                       <b><p>Disponível</p></b> 
                    }
                    else
                    {
                        <p>Indisponível</p>
                    }

                <div class="product-item-badge">
                     
                    @if (item.IsNew == true)
                    {
                        <p>Novo</p>
                    }
                    else
                    {
                        <p>Usado</p>
                    }

                </div>
                </div>
            </div>
        </div>
    }

</div>

